{
    "name": "gt-app",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "predev": "cd packages/db && npm run db:generate",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "check-types": "turbo run check-types",
        "clean": "turbo run clean && rm -rf node_modules",
        "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf {} +",
        "clean:cache": "rm -rf node_modules/.cache .turbo"
    },
    "devDependencies": {
        "prettier": "^3.6.2",
        "turbo": "^2.5.6",
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "npm@9.2.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
